# Database
# Le type de base de données est auto-détecté depuis l'URI
# SQLite (default)
DATABASE_URL=sqlite+aiosqlite:///./data/myelectricaldata.db
# PostgreSQL (décommenter et commenter SQLite, puis configurer le mot de passe dans docker-compose.yml)
# DATABASE_URL=postgresql+asyncpg://myelectricaldata:VOTRE_MOT_DE_PASSE@postgres:5432/myelectricaldata

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=86400

# Enedis API Credentials
ENEDIS_CLIENT_ID=your_client_id_here
ENEDIS_CLIENT_SECRET=your_client_secret_here
ENEDIS_ENVIRONMENT=sandbox  # sandbox or production
ENEDIS_REDIRECT_URI=https://myelectricaldata.fr/oauth/callback

# RTE API Credentials (for TEMPO calendar)
RTE_CLIENT_ID=XXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
RTE_CLIENT_SECRET=XXXXXXX-XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# API Security
SECRET_KEY=your-secret-key-here-min-32-chars-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Rate Limiting
ENEDIS_RATE_LIMIT=5  # requests per second

# User Rate Limiting (daily)
USER_DAILY_LIMIT_NO_CACHE=50
USER_DAILY_LIMIT_WITH_CACHE=1000

# Application
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# URLs (Production)
FRONTEND_URL=https://myelectricaldata.fr
BACKEND_URL=https://myelectricaldata.fr/api

# URLs (Development - uncomment for local dev)
# FRONTEND_URL=http://localhost:3000
# BACKEND_URL=http://localhost:8000

# Mailgun Email
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_FROM_EMAIL=MyElectricalData <noreply@myelectricaldata.fr>
REQUIRE_EMAIL_VERIFICATION=false

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here
REQUIRE_CAPTCHA=false

# Admin
ADMIN_EMAILS=admin@example.com,another.admin@example.com
