myelectricaldata.fr {
    # Certificat auto-signé pour le développement local
    tls internal

    # Redirect /static/swagger-custom.css to /api/static/swagger-custom.css for Swagger UI
    handle /static/swagger-custom.css {
        redir /api/static/swagger-custom.css permanent
    }

    # Routes statiques API (CSS, JS, etc.) - pas de strip_prefix
    handle /api/static/* {
        reverse_proxy backend:8000
    }

    # Routes API - proxy vers le backend FastAPI
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy backend:8000
    }

    handle /consent* {
        reverse_proxy backend:8000
    }

    # Route par défaut - proxy vers le frontend
    handle {
        reverse_proxy frontend:80 {
            header_up Cache-Control "no-cache, no-store, must-revalidate"
        }
        header Cache-Control "no-cache, no-store, must-revalidate"
    }

    # Logs
    log {
        output stdout
        format console
    }
}
